<script>

    function addToCart(e, id) {
        var inCart = e.attr('data-inCart');
        if (inCart == 0) {
            document.cookie = 'cartElements[' + id + ']=' + id + '; path=/';
            flyToCart(id);
            $('#n_cart_items').text(parseInt($('#n_cart_items').text()) + 1);
            e.attr('data-inCart', 1);
            e.text('Delete from Cart');
        } else {
            var name = 'cartElements[' + id + ']';
            document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:01 GMT; path=/';
            e.text('Add To Cart');
            e.attr('data-inCart', 0);
            $('#n_cart_items').text(parseInt($('#n_cart_items').text()) - 1);
        }


    }

    function flyToCart(id) {
        var cart = $('.shopping-cart');
        var imgtodrag = $('#course_image_' + id);
        if (imgtodrag) {
            var imgclone = imgtodrag.clone()
                .offset({
                    top: imgtodrag.offset().top,
                    left: imgtodrag.offset().left
                })
                .css({
                    'opacity': '0.5',
                    'position': 'absolute',
                    'height': '150px',
                    'width': '150px',
                    'z-index': '100'
                })
                .appendTo($('body'))
                .animate({
                    'top': cart.offset().top + 10,
                    'left': cart.offset().left + 10,
                    'width': 75,
                    'height': 75
                }, 1000, 'easeInOutExpo');

            setTimeout(function () {
                cart.effect("shake", {
                    times: 2
                }, 200);
            }, 1500);

            imgclone.animate({
                'width': 0,
                'height': 0
            }, function () {
                $(this).detach()
            });
        }


    }

</script>
